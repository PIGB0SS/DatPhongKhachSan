@model Domain.Entities.Hotel

<div class="w-100 card border-0 p-5">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2> Thêm mới thông tin Khách Sạn</h2>
            </div>
        </div>
    </div>
    <div class="card-body border py-4 ">
        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label for="Name" class="ms-2">Tên Khách Sạn</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label for="Description" class="ms-2">Mô tả</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border shadow" />
                    <label for="Price" class="ms-2">Giá Phòng</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="SquareMeter" class="form-control border shadow" />
                    <label for="SquareMeter" class="ms-2">Số mét vuông</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Occupancy" class="form-control border shadow" />
                    <label for="Occupancy" class="ms-2">Số người tối đa</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ImageUrl" class="form-control border shadow" />
                    <label for="ImageUrl" class="ms-2">Hình ảnh</label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Thêm
                        </button>
                        <a asp-controller="Hotel" asp-action="Index" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Thoát
                        </a>
                    </div>
                </div>
        </form>
    </div>
</div>
